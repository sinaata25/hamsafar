<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="127dp"
    android:layout_marginVertical="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="14dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/special_kind"
                        android:textSize="12sp"
                        android:fontFamily="@font/vazir_bold"
                        android:layout_gravity="center_vertical"
                        android:textColor="#2B9348"
                        android:gravity="center"
                        android:background="@drawable/cardstyle7"/>

                    <TextView
                        android:id="@+id/driver_name_special"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/vazir_bold"
                        android:gravity="right"
                        android:text="علیرضا چراغی"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_img_special"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/profile_header"
                        android:layout_gravity="center_vertical"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/location_text_special"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="10"
                        android:fontFamily="@font/vazir"
                        android:gravity="right"
                        android:text="شیراز - بوشهر"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <ImageView
                        android:id="@+id/location_img"
                        android:layout_width="13dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/location" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_text_special"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/vazir"
                        android:gravity="right"
                        android:text="15 بهمن "
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <ImageView
                        android:id="@+id/date_img"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star_img"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/star" />

                    <TextView
                        android:id="@+id/rate_special"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left"
                        android:fontFamily="@font/vazir_bold"
                        android:text="4.5"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginLeft="2dp"/>

                    <TextView
                        android:id="@+id/price_text_special"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/vazir"
                        android:gravity="right"
                        android:text="5000000"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <ImageView
                        android:id="@+id/price_img"
                        android:layout_width="10dp"
                        android:layout_height="16dp"
                        android:layout_gravity="right"
                        android:src="@mipmap/price" />


                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:layout_marginVertical="6dp"
                android:layout_marginRight="16dp"
                android:scaleType="fitXY"
                android:src="@mipmap/profile_header" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>