<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="182dp"
        android:layout_height="320dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/suggestion_img" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="89dp"
                android:layout_marginBottom="9dp"
                android:backgroundTint="#80FFFFFF"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="14dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/star" />

                        <TextView
                            android:id="@+id/rate_suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            android:text="4.5"
                            android:fontFamily="@font/vazir_bold"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:layout_marginLeft="2dp"/>

                        <TextView
                            android:id="@+id/driver_name_suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/vazir_bold"
                            android:gravity="right"
                            android:text="علیرضا چراغی"
                            android:textColor="@color/black"
                            android:textSize="7sp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_img_suggestion"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/profile_header"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/location_text_suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_weight="10"
                            android:fontFamily="@font/vazir"
                            android:gravity="right"
                            android:text="شیراز - بوشهر"
                            android:textColor="@color/black"
                            android:textSize="9sp" />

                        <ImageView
                            android:id="@+id/location_img"
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:src="@mipmap/location" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_text_suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/vazir"
                            android:gravity="right"
                            android:text="15 بهمن "
                            android:textColor="@color/black"
                            android:textSize="9sp" />

                        <ImageView
                            android:id="@+id/date_img"
                            android:layout_width="7dp"
                            android:layout_height="match_parent"
                            android:src="@mipmap/date" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/price_text_suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/vazir"
                            android:gravity="right"
                            android:text="5000000"
                            android:textColor="@color/black"
                            android:textSize="9sp" />

                        <ImageView
                            android:id="@+id/price_img"
                            android:layout_width="7dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:src="@mipmap/price" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>