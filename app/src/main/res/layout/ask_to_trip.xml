<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AskToTrip">


    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="درخواست سفر"
        android:fontFamily="@font/vazir_bold"
        android:textColor="@color/primary_blue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ask_trip_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/back_black" />

    <TextView
        android:id="@+id/ask_trip_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:fontFamily="@font/vazir_bold"
        android:textColor="@color/gray_60"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <LinearLayout
        android:id="@+id/ask_trip_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/ask_trip_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ask_trip_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/vazir"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="TextView" />


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ask_origin" />

        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:id="@+id/ask_trip_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vazir"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="20:25" />

    </LinearLayout>

    <View
        android:id="@+id/ask_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_60"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/ask_trip_destination"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="14dp"
        android:layout_marginRight="84dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ask_trip_start"
        android:layout_height="wrap_content"
        android:src="@mipmap/ask_destination" />

    <TextView
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:id="@+id/ask_trip_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/imageView16"
        app:layout_constraintTop_toBottomOf="@id/ask_trip_start"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/vazir"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="TextView" />

    <View
        android:id="@+id/ask_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/gray_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ask_trip_destination" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp"
        android:text="چند نفر هستید"
        android:fontFamily="@font/vazir_bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ask_line2"
        tools:layout_editor_absoluteY="357dp" />

    <TextView
        android:id="@+id/ask_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/post_items"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/vazir_bold"
        android:text="1"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <ImageView
        android:id="@+id/ask_add_people"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="@id/ask_number"
        app:layout_constraintBottom_toBottomOf="@id/ask_number"
        app:layout_constraintEnd_toEndOf="@id/ask_number"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="377dp"
        android:src="@mipmap/plus" />

    <ImageView
        android:id="@+id/ask_mines_people"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="@id/ask_number"
        app:layout_constraintTop_toTopOf="@id/ask_number"
        app:layout_constraintBottom_toBottomOf="@id/ask_number"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="359dp"
        android:src="@mipmap/mines" />

    <TextView
        android:id="@+id/ask_trip_buttom_order"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/cardstyle1"
        android:fontFamily="@font/vazir_bold"
        android:gravity="center"
        android:text="درخواست سفر"
        android:textColor="@color/white"
        android:textSize="16sp" />


</androidx.constraintlayout.widget.ConstraintLayout>